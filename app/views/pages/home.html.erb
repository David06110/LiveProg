<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<% @bars = Bar.all %>
<div class="card-bar-container">
  <% @bars.each do |bar| %>
    <div class="card-bar">
      <div class="card-bar-img">
        <% bar.photo.each do |photo| %>
          <%= cl_image_tag photo.key, :width=>400, :height=>250, 'aria-expanded': false %>
        <% end %>
      </div>
      <div class="card-bar-content">
        <h1><%=link_to bar.name, bar_path(bar.id) %></h1>
        <h2><%= bar.address %></h2>
        <h3><%= bar.description %></h3>
        <p><%= bar.opening_time %></p>
        <p><%= bar.menu %></p>
      </div>
    </div>
  <% end %>
</div>
