<div class="container">
  <h2>Créer mon groupe de musique<h2>
  <%= simple_form_for(@band) do |f| %>
    <div class="form-inputs">
      <%= f.input :name,
                  required: true,
                  label: "Nom du groupe",
                  input_html: { autocomplete: "Nom du groupe" } %>
      <%= f.input :style,
                  required: true,
                  collection: ["Rock", "Rap", 'Punk'], prompt: "Quel est ton style de musique?"%>
      <%= f.input :description,
                  label: "Description du groupe",
                  input_html: { autocomplete: "description" }%>
      <%= f.input :youtube_url,
                  label: "Page Youtube",
                  input_html: { autocomplete: "youtube_url" }%>
      <%= f.input :facebook_url,
                  label: "Page Facebook",
                  input_html: { autocomplete: "facebook_url" } %>
      <%= f.input :photos, as: :file,
                  input_html: { multiple: true } %>
    </div>
    <hr>
    <div class="form-actions">
      <%= f.button :submit, "Créer", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
