<div class="backlink">
  <%= link_to :back do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
</div>
<div class="bar-show-container">
  <div class="bar-show-banner" >
    <h1><%= @bar.name %></h1>
    <i class="far fa-star"></i>
  </div>
  <div class="bar-show-con">
    <div class="bar-show-photo">
      <% @bar.photo.each do |photo| %>
        <%= cl_image_tag photo.key, :width=>400, :height=>250, 'aria-expanded': false %>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mb-4">
      <div class="btn btn-ghost">
        <%= @bar.description %>
      </div>
    </div>
    <div class="bar-show-infos">
      <h3><i class="far fa-clock"></i> <%= @bar.opening_time %></h3>
    </div>
    <div class="bar-show-programme">
      <% if @events.count > 1 %>
        <h2>Dates à venir</h2>
      <% elsif @events.count > 0 %>
        <h2>Date à venir</h2>
      <% else %>
        <h2>Pas de date à venir</h2>
      <% end %>
      <% @events.each do |event| %>
        <%=link_to(event_path(event), class:"btn btn-gradient") do %>
          <%=event.name%>
        <br>
        <%=  "#{event.start_date.strftime('%d/%m')} à" %>
        <%= "#{event.start_date.strftime('%H:%M')}" %>
        <%end%>
      <%end%>
    </div>
  </div>
</div>



<% if false %>
<p><%= @bar.address %></p>
<p><%= @bar.menu %></p>
<% end %>
