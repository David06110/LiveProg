<div class="card-event">
  <div class="band-img">
    <%= cl_image_tag event.band.photos[0].key, :height=>250, :width=>400,'aria-expanded': false %>
  </div>
  <div class="event-time">
  <%=  "#{event.start_date.strftime('%d/%m')}" %>
  <br>
  <%= "#{event.start_date.strftime('%H:%M')}" %>
  </div>
    <div class="card-event-infos">
      <div>
        <%= link_to event.band.name, event_path(event.id) %>
        <br>x<br>
        <%= link_to event.bar.name, event_path(event.id) %>
      </div>
    </div>
    <div class="event-address">
      <%= event.bar.address %>
    </div>
</div>
